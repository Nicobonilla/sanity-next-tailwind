{
    "parser": "@typescript-eslint/parser",
    "env":{"node":true},
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "warn",  // Para evitar el uso de 'any'
      "@typescript-eslint/explicit-module-boundary-types": "warn"  // Para que se exijan tipos expl√≠citos
    }
  }
  